<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.towelove.core.mapper.LoveAlbumMapper">

    <resultMap type="com.towelove.core.domain.lovealbum.LoveAlbum" id="LoveAlbumResult">
        <id property="id" column="id"/>
        <result property="boyId" column="boy_id"/>
        <result property="girlId" column="girl_id"/>
        <result property="title" column="title"/>
        <result property="daysInLove" column="days_in_love"/>
        <result property="likesNumber" column="likes_number"/>
        <result property="viewsNumber" column="views_number"/>
        <result property="canSee" column="can_see"/>
        <result property="status" column="status"/>
        <result property="remark" column="remark"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="deleted" column="deleted"/>
    </resultMap>
    <sql id="allFields">
        id, boy_id, girl_id, title, days_in_love, likes_number,
          views_number, can_see, status, remark, create_by,
          create_time, update_by, update_time, deleted
    </sql>

    <select id="duplicatedCreation" resultType="java.lang.Integer">
        select count(*) from love_album
        where boy_id=#{boyId} or girl_id=#{girlId};
    </select>
</mapper>

